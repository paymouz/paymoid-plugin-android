<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/MaterialAppThemeToolbar</item>
        <item name="android:colorBackground">@color/mainBackground</item>
        <item name="textInputStyle">@style/LightTextInputLayout</item>
        <item name="colorOnSurface">@color/md_grey_600</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MaterialHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="MaterialAppThemeToolbar" parent="Widget.MaterialComponents.Toolbar">
        <!--<item name="android:background">material</item>-->
        <item name="android:minHeight">80dp</item>
        <item name="titleTextAppearance">@style/MaterialHeadline5</item>
        <item name="titleTextColor">@android:color/white</item>>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="LightTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/md_grey_500</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@color/input_border_colors</item>
        <item name="boxBackgroundColor">@color/input_background_colors</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
    </style>


</resources>